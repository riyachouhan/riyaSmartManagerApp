                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card10"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/phrase_text10"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@null"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/phrase_text11"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@null"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card12"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/phrase_text12"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@null"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/generate_passphrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:layout_gravity="end"
            android:text="Generate New"
            android:background="@drawable/background_green3"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/client_id_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your Email*"
                android:textSize="15sp"
                android:inputType="textEmailAddress"
                android:layout_margin="10dp"
               />

        </com.google.android.material.textfield.TextInputLayout>

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:drawableStart="@drawable/info"
    android:drawablePadding="10dp"
    android:textColor="@color/colorSecondaryText"
    android:text="@string/create_passphrase"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="30dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:weightSum="2">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/copy_passphrase"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:text="Copy Passphrase"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:padding="12dp"
        android:textSize="12dp"
        android:background="@drawable/button_accent_round"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_step"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:text="Next Step"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:padding="12dp"
        android:textSize="12sp"
        android:background="@drawable/button_accent_round"
        />
</LinearLayout>


</LinearLayout>
    </ScrollView>

