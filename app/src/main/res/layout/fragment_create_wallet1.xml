<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fitsSystemWindows="true">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="@drawable/side_nav_bar"
        android:gravity="center_vertical"
        android:weightSum="2">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@drawable/ic_back_white"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/margin"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/sch_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:text="Create Passphrase"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                />
    </LinearLayout>

        <TextView
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Passphrase"

            android:padding="4dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold|italic"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>


        <TextView
            android:id="@+id/passphrase_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text=""
            android:padding="4dp"
            android:textColor="@color/colorSecondaryText"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    >

                <TextView
                    android:id="@+id/phrase_text1"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:text=""
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/phrase_text2"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/phrase_text3"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/phrase_text4"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@null"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/phrase_text5"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@null"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card6"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/phrase_text6"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:background="@null"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="6"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card7"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    >

                    <TextView
                        android:id="@+id/phrase_text7"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:text=""
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/phrase_text8"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:textColor="#111111"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card9"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    >

                    <TextView
                        android:id="@+id/phrase_text9"
                        android:layout_width="50dp"
                        android:layout_height="20dp"
