<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:background="@color/white">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/side_nav_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:visibility="invisible"
            android:background="@drawable/ic_back_white"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            />
            <TextView
                android:id="@+id/sch_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:padding="5dp"
                android:layout_marginStart="10dp"
                android:text="SafeKeeping"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                />



    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:text="Carefully write it down."
            android:padding="4dp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Make sure to keep it safe."
            android:textColor="@color/colorSecondaryText"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

        <com.scottyab.showhidepasswordedittext.ShowHidePasswordEditText
            android:id="@+id/customFontAndHideShow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Passphrase"
            android:textStyle="bold|italic"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:padding="@dimen/padding_medium"
            android:background="@drawable/edit_back"
            android:textColorHint="@color/colorSecondaryText"
            app:drawable_show="@drawable/visibility"
            app:drawable_hide="@drawable/visibility_off"
            app:tint_color="@color/cyan"
            tools:ignore="HardcodedText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/copy_passphrase"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Copy Passphrase"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:padding="12dp"
                android:textSize="12sp"
                android:background="@drawable/button_accent_round"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/yessafe"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:text="Yes it is safe"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:padding="12dp"
                android:textSize="12sp"
                android:background="@drawable/button_accent_round"
                />
        </LinearLayout>

</LinearLayout>
</RelativeLayout>

