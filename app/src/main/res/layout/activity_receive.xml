<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activities.ReceivedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/side_nav_bar"
            android:weightSum="2">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/ic_back_white"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                />
            <TextView
                android:id="@+id/sch_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/homeheader"
                android:text="Receive DDK"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/text_card_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvText1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_10sdp"
                style="@style/MyCustomTabText"
                android:gravity="center_horizontal"
                android:text="To receive the DDK Coin share this QR Code
with your friends/relative"
                android:textColor="@color/colorBlackText" />

            <ImageView
                android:id="@+id/ivQrCode"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_10sdp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnShareQrCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_25sdp"
                android:background="@drawable/button_accent_round"
                android:text="Share QR Code with friends"
                android:textColor="@color/white"
                style="@style/MyCustomTabText"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/text_card_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:id="@+id/header_view"
                android:text="To receive the DDK coin share wallet address"
                android:textColor="@color/colorBlackText"
                style="@style/MyCustomTabText"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                style="@style/MyCustomTabText"
                android:text="Wallet address"
                android:textColor="@color/tab_unSelect"
               />

            <TextView
                android:id="@+id/tvWalletAddressCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:drawableEnd="@drawable/ic_copy_small"
                android:drawablePadding="@dimen/_15sdp"
                style="@style/MyCustomTabText"
                android:drawableTint="@color/colorBlackText"
                 android:text="1BvBMSEYstWetqTFn5Au4m4GFg7xJaNVN2"
                android:textColor="@color/colorBlackText"
               />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/text_card_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:padding="@dimen/_15sdp"
                android:text="To receive the DDK coin share phone number"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Phone Number"
                android:textColor="@color/tab_unSelect"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:id="@+id/tvCopyPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:drawableEnd="@drawable/ic_copy_small"
                android:drawablePadding="@dimen/_15sdp"
                android:drawableTint="@color/colorBlackText"
                android:fontFamily="@font/montserrat_semibold"
                android:text="989898989898"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>