<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_16sdp"
        android:background="@drawable/text_card_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etDDK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Enter DDK amount"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorBlackText"
            android:textColorHint="@color/colorSecondaryText"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="BTC Conversion"
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBtcConversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/montserrat_semibold"/>

            <TextView
                android:id="@+id/tvBtcRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorBlackText" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="USDT Conversion"
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/_10ssp"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUsdConversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorBlackText"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/montserrat_semibold" />

            <TextView
                android:id="@+id/tvUsdRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="@dimen/_10ssp"
                android:textColor="@color/colorBlackText" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>