<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:paddingBottom="@dimen/_30sdp"
        android:padding="@dimen/_4sdp">

        <ImageView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:src="@drawable/right_icon_scan"
            android:tint="@color/green_color"
            />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:text="Paid Successfully To"
        android:gravity="center"
            android:lineSpacingExtra="4dp"
        android:textColor="@color/black"
        style="@style/subHeadingsmasubllSize"
        android:id="@+id/hintform"/>

    <TextView
        android:id="@+id/etWalletUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6sdp"
        style="@style/boldtextsie"
        android:gravity="center"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/upperheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        style="@style/subhintdataSize"
        android:gravity="center"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/etDDKCoins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center"
        android:digits="0123456789."
        android:gravity="center_vertical"
        android:background="@null"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        style="@style/MainBalanceSize"
        />

        <TextView
            android:id="@+id/btnVerify"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/button_accent_round"
            android:gravity="center"
            android:text="Go To Home"
            style="@style/submitButtontextSize"
            android:layout_marginBottom="@dimen/_30sdp"
            android:textColor="#ffffff"/>


    </LinearLayout>

</RelativeLayout>
