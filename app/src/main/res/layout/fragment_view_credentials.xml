<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/text_card_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">


        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Name"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/colorBlackText" />

        <TextView
            android:id="@+id/name_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Vijendra  Patidar"
            android:textColor="@color/colorBlackText" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="DDK Address"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:textColor="@color/colorBlackText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ddk_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_medium"
                android:text="asdasdasdas321321"
                android:textColor="@color/colorBlackText" />

            <ImageView
                android:id="@+id/ddk_copy_IV"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_copy" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Passphrase"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlackText"
            android:textStyle="bold"
            android:textSize="@dimen/_10ssp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pass_phase_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlackText" />

            <ImageView
                android:id="@+id/pass_copy_IV"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_copy"
                android:layout_marginStart="@dimen/_5sdp"
                android:padding="@dimen/_3sdp"
                android:visibility="invisible" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Second Passphrase"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlackText"
           />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pass_phase2_ET"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlackText" />

            <ImageView
                android:id="@+id/pass_2_copy_IV"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_copy"
                android:visibility="invisible" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:text="Referral Link"
            android:textColor="@color/colorBlackText"
            android:fontFamily="@font/montserrat_regular"
            android:visibility="gone" />

        <TextView
            android:id="@+id/referal_Link_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlackText"
            android:fontFamily="@font/montserrat_medium"
            android:visibility="gone" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_weight=".5"
            android:text="Notes"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorBlackText"
            />

        <TextView
            android:id="@+id/notes_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="left"
            android:inputType="text"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/colorBlackText" />

        <TextView
            android:id="@+id/btnShowPassphrase"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_accent_round"
            android:gravity="center_horizontal"
            android:padding="8dp"
            android:text="Show Passphrase"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/copy_IV"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@drawable/ic_copy"
                android:drawablePadding="5dp"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_medium"
                android:text="Copy"
                android:drawableTint="@color/colorApp"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/share_IV"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@drawable/ic_share_black_24dp"
                android:drawablePadding="5dp"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_medium"
                android:drawableTint="@color/colorApp"
                android:text="Share"
                android:textColor="@color/colorAccent"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>