<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/btnGoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:drawableStart="@drawable/ic_go_back"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableTint="@color/colorApp"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/_5sdp"
                android:visibility="gone"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Go back"
                android:textColor="@color/colorApp"
                android:textSize="@dimen/_10ssp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:orientation="horizontal">

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/tvAvialbaleDDk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Available DDK: "
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/colorApp"/>

                <TextView
                   android:id="@+id/minimum_usdt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/colorApp"
                    android:text="20 USDT"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_below="@+id/tvSelectDdkAddress"
                    android:textSize="11sp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/lytCreditView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enter USDT "
                            android:visibility="gone"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/etDDKCreditCard"
                            android:background="@drawable/edittext_newdes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:hint="Enter USDT Amount"
                            android:padding="@dimen/_10sdp"
                            android:imeOptions="actionDone"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@color/colorBlackText"
                            android:textColorHint="@color/colorBlackText"
                            android:textSize="13sp"
                            />

                           <LinearLayout
                            android:layout_marginTop="@dimen/_18sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                             android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:text="SAM Koin Conversion"
                                   android:textSize="11sp"
                                   style="@style/TextAppearance.AppCompat.Small"
                                   android:textColor="@color/colorSecondaryText"
                                   />

                            <TextView
                                android:id="@+id/tvRateCreditCard"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                style="@style/TextAppearance.AppCompat.Small"
                                android:text="0"
                                android:textColor="@color/colorBlackText"
                                android:textSize="11sp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvConversionCreditCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:text="0"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorBlackText"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tvEsTextCreditCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:text="Terminal Fee"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvEstimatedFees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="0"
                            android:textColor="@color/colorBlackText"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:text="Total USDT Subscription"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/tvTotalCreditCard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:text="0"
                            android:textColor="@color/colorBlackText"
                            android:textSize="13sp"/>

                    </LinearLayout>

                    <com.ncorti.slidetoact.SlideToActView
                        android:id="@+id/slide_custom_icon"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_220sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:slider_height="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        app:outer_color="#810B81"
                        app:inner_color="@color/white"
                        app:area_margin="1dp"
                        app:text_size="14sp"
                        android:layout_marginTop="@dimen/_40sdp"
                         android:layout_marginBottom="@dimen/_15sdp"
                        app:slider_icon="@drawable/ic_slider_icon"
                        app:text="Slide To Confirm "/>

                </LinearLayout>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>