<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/lytSuccess"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/sam_wallet_icon_new" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Thank you for using SAM"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:padding="@dimen/_5sdp"
                android:text="Notes: Please do not close this windows until the verification is done."
                android:textSize="9sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/txtblack"
                />

            <LinearLayout
                android:layout_marginLeft="@dimen/_55ssp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:src="@drawable/ic_check_circle_cyan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:text="Order Placed"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="@dimen/_28sdp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@color/colorPrimary" />

                    <View
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="1.5dp"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@color/colorPrimary" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@color/colorPrimary" />

                    <View
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="1.5dp"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@color/colorPrimary" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lytTransactionCreated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivTransactionCreateUncheck"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:src="@drawable/btn_radio_off_other" />

                    <ImageView
                        android:id="@+id/ivTransactionCreateCheck"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:src="@drawable/ic_check_circle_cyan"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:text="Transaction Created"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="@dimen/_28sdp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@color/colorPrimary" />

                    <View
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="1.5dp"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@color/colorPrimary" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@color/colorPrimary" />

                    <View
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_width="1.5dp"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@color/colorPrimary" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lytConfirmedFailed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp">

                        <ImageView
                            android:id="@+id/ivOrderStatusIconUnCheck"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/btn_radio_off" />

                        <ProgressBar
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            />
                    </FrameLayout>


                    <ImageView
                        android:id="@+id/ivOrderStatusIconCheck"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:src="@drawable/ic_check_circle_cyan"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvOrderStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:text="In Process"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center|center_vertical"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <LinearLayout
                    android:layout_weight="1.8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction ID : "
                        android:textSize="7.5sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                     />

                    <TextView
                        android:id="@+id/tvTransactionId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorBlackText"
                        android:textSize="6.5sp"
                        android:singleLine="true"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/btnCopyTransactionId"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="right"
                        android:src="@drawable/ic_copy_24"
                        android:gravity="center"
                        android:padding="@dimen/_8sdp"
                        android:text="Copy"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/btnGoHome"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/button_accent_round"
                android:gravity="center"
                android:text="Go Home"
                android:visibility="gone"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>