<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/text_card_bg"
    android:id="@+id/viewclickdata"
    android:orientation="vertical">

    <LinearLayout
        android:paddingBottom="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:paddingTop="@dimen/_4sdp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:padding="@dimen/_5sdp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivHistoryIcon"
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_38sdp"
                android:layout_gravity="center"
                android:background="@drawable/card_blue_cornor"
                android:padding="@dimen/_8sdp"
                android:scaleType="centerInside"
                android:src="@drawable/subscription_new"
                android:tint="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2.4"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingTop="@dimen/_7sdp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.4"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvOrderType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/colorBlackText"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_marginTop="@dimen/_2sdp"
                        android:id="@+id/tvOrderNumber"
                        android:singleLine="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/colorBlackText"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.6"
                    android:gravity="end"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_marginLeft="-5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center"
                        android:paddingRight="@dimen/_8sdp"
                        android:paddingLeft="@dimen/_8sdp"
                        android:background="@drawable/light_card_back"
                        android:textColor="@color/darkblue"
                        android:textSize="9sp" />

                    <TextView
                        android:paddingRight="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:id="@+id/tvDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:textColor="@color/tab_unSelect"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:weightSum="3"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:singleLine="true"
                        android:layout_weight="1"
                        android:id="@+id/tvAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="left"
                        android:textStyle="bold"
                        android:textColor="@color/darkblue"
                        android:textSize="9sp" />

                    <TextView
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:id="@+id/tvConversion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/darkblue"
                        android:textSize="9sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingRight="@dimen/_4sdp"
                        android:id="@+id/tvddkamount"
                        android:maxLines="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textColor="@color/darkblue"
                        android:textSize="9sp" />

                    <TextView
                        android:paddingRight="@dimen/_4sdp"
                        android:id="@+id/tvFees"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="2194.2344 ddk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textColor="@color/darkblue"
                        android:textSize="9sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray" />

</LinearLayout>