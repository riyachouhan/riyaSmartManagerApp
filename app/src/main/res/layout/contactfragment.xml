<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#eeeeee"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/text_card_bg"
        android:orientation="vertical"
        android:layout_margin="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:padding="@dimen/_15sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Subject"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/colorSecondaryText"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/subject_ET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint=""
            android:padding="@dimen/_5sdp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:inputType="textPersonName"
            android:textColor="@color/colorBlackText"
            android:textColorHint="@color/colorSecondaryText"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightcolor" />

        <LinearLayout
            android:id="@+id/dateorbirthview"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Message"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorSecondaryText"
                android:textSize="12sp" />

            <EditText
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/description_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_enter_vi"
                android:minLines="5"
                android:hint=" ( Your Message Here )"
                android:padding="@dimen/_5sdp"
                android:gravity="top"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorBlackText"
                android:textColorHint="@color/colorSecondaryText"
                android:textSize="14sp" />

        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/billingviewimg"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_width="@dimen/_25sdp"
                    android:src="@drawable/new_upload"
                    android:tint="#0494D6"
                    android:layout_height="@dimen/_25sdp"/>

                <ImageView
                    android:id="@+id/billingview"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_width="@dimen/_15sdp"
                    android:src="@drawable/new_upload"
                    android:tint="#0494D6"
                    android:layout_height="@dimen/_15sdp"/>

                <TextView
                   android:layout_marginLeft="@dimen/_5sdp"
                   android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Attachment"
                    android:textAppearance="@style/ShapeAppearance.MaterialComponents.SmallComponent"
                    android:textColor="#0494D6"
                    android:gravity="right"
                    android:textSize="14sp" />

            </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/button_accent_round"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>


</LinearLayout>