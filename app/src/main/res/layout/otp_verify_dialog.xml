<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/lytOtp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo1"
                android:visibility="invisible"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_white"
                android:tint="#820C83" />

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/otherview"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/logoicon"
                    android:layout_alignParentLeft="true"
                    android:layout_width="@dimen/_50sdp"
                    android:src="@drawable/emailverficaytion"
                    android:layout_height="@dimen/_50sdp"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/headinglog"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/_15sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="EMAIL VERIFICATION"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/full_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_medium"
                android:text="OTP has been sent successfully to your Email/Phone. Please verify your account by entering it below."
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorSecondaryText"
                android:fontFamily="@font/montserrat_medium" />

            <TextView
                android:id="@+id/mobile_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_medium"
                android:text=""
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/colorSecondaryText"
                android:fontFamily="@font/montserrat_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginEnd="@dimen/margin"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        >

                        <EditText
                            android:id="@+id/otp_edt11"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_back"
                            android:elevation="4dp"
                            android:gravity="center"
                            android:hint="-"
                            android:inputType="number"
                            android:maxLength="1"
                            android:padding="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorBlackText"
                            android:textColorHint="@color/colorAccent"
                            android:textSize="14sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_marginTop="@dimen/_40sdp">

                        <EditText
                            android:id="@+id/otp_edt12"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_back"
                            android:elevation="4dp"
                            android:gravity="center"
                            android:hint="-"
                            android:inputType="number"
                            android:maxLength="1"
                            android:padding="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorBlackText"
                            android:textColorHint="@color/colorAccent"
                            android:textSize="14sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_marginTop="@dimen/_40sdp">

                        <EditText
                            android:id="@+id/otp_edt13"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_back"
                            android:elevation="4dp"
                            android:gravity="center"
                            android:hint="-"
                            android:inputType="number"
                            android:maxLength="1"
                            android:padding="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorBlackText"
                            android:textColorHint="@color/colorAccent"
                            android:textSize="14sp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card4"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin"
                        android:layout_marginTop="@dimen/_40sdp">

                        <EditText
                            android:id="@+id/otp_edt14"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_back"
                            android:elevation="4dp"
                            android:gravity="center"
                            android:hint="-"
                            android:inputType="number"
                            android:maxLength="1"
                            android:padding="15dp"
                            android:singleLine="true"
                            android:textColor="@color/colorBlackText"
                            android:textColorHint="@color/colorAccent"
                            android:textSize="14sp" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:id="@+id/timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel1"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/resend_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/timer"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Resend OTP"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>

            <TextView
                android:id="@+id/btnVerify"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:background="@drawable/button_accent_round"
                android:gravity="center"
                android:text="Verify"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="#ffffff"/>

            <LinearLayout
                android:id="@+id/back_view"
                android:layout_marginTop="@dimen/_35sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="@dimen/_40sdp">

                <ImageView
                    android:tint="#393A39"
                    android:layout_gravity="center"
                    android:padding="@dimen/_9sdp"
                    android:src="@drawable/left_double_arrow"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginLeft="-6dp"
                    android:text="Back"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="#393A39"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
