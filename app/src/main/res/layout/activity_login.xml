<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:padding="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:src="@drawable/logo_white"/>

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/welcome_back"
                style="@style/submitButtontextSize"
                android:layout_marginTop="@dimen/_10sdp"
                 android:layout_marginBottom="@dimen/_32sdp"
                android:textColor="@color/white"
                />

            <EditText
                style="@style/EditTextSize"
                android:id="@+id/email_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:layout_marginTop="16dp"
                android:hint="@string/email"
                android:textColor="@color/white"
                android:textColorHint="@color/offWhite"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:background="@drawable/edit_back_trans_accent"
                android:drawablePadding="@dimen/_8sdp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/password_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_32sdp"
                android:layout_marginEnd="@dimen/_32sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:hint="@string/password"
                style="@style/EditTextSize"
                android:background="@drawable/edit_back_trans_accent"
                android:textColor="@color/white"
                android:textColorHint="@color/offWhite"
                android:inputType="textPassword"
                android:padding="8dp"
                android:drawablePadding="@dimen/_8sdp"
                android:singleLine="true" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/submit_BT"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="48dp"
                android:background="@drawable/button_gradiant"
                style="@style/submitButtontextSize"
                android:text="Login"
                android:textColor="@color/colorApp" />

    <LinearLayout
        android:id="@+id/forgot_LL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forgot_TV"
            style="@style/subsmallSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            />

    </LinearLayout>


        <TextView
            android:id="@+id/signup2_TV"
            android:layout_width="match_parent"
            android:padding="@dimen/_16sdp"
            style="@style/subsmallSize"
            android:background="#20FFFFFF"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
             />

    </LinearLayout>
</ScrollView>