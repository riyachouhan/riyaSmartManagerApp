<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <View
        android:layout_width="@dimen/_50sdp"
        android:layout_height="5dp"
        android:background="@color/white"
        android:id="@+id/view"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/gcahlogo"
            android:id="@+id/ivBankLogo"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:id="@+id/tvBankNameDDk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Dena Bank"
            android:textColor="@color/colorApp"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@null"
                android:textSize="@dimen/_13sdp"
                android:inputType="numberDecimal"
                android:maxLength="12"
                android:ems="12"
                android:enabled="false"
                android:textColor="@color/black"
                android:id="@+id/etAmountSend"
                android:singleLine="true"
                android:hint="Enter Amount"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="AUD"
                android:id="@+id/tv_CountryId"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/_19sdp"
            android:layout_marginRight="@dimen/_19sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Maximum of AUD 50,000"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/tv_ConMaxTransfer"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/colorLightPurpal"
            android:layout_marginRight="@dimen/_19sdp"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/black"
                android:inputType="text"
                android:maxLength="30"
                android:id="@+id/etAccountName"
                android:hint="Enter Account Name"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/_19sdp"
            android:layout_marginRight="@dimen/_19sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:visibility="invisible"
            android:text="Max. of 30 characters"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/colorLightPurpal"
            android:layout_marginRight="@dimen/_19sdp"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="@dimen/_13sdp"
                android:inputType="number"
                android:textColor="@color/black"
                android:id="@+id/etAccountNumber"
                android:singleLine="true"
                android:hint="Enter Account Number"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/_19sdp"
            android:layout_marginRight="@dimen/_19sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text=""
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/colorLightPurpal"
            android:layout_marginRight="@dimen/_19sdp"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/black"
                android:inputType="textWebEmailAddress"
                android:textSize="@dimen/_13sdp"
                android:id="@+id/etEmailReceipt"
                android:singleLine="true"
                android:hint="Enter Email Address"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/_19sdp"
            android:layout_marginRight="@dimen/_19sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Enter Email (Optional)"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/colorLightPurpal"
            android:layout_marginRight="@dimen/_19sdp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvSendMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_accent_round"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingRight="@dimen/_25sdp"
            android:text="Send Money"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />


    </LinearLayout>

</LinearLayout>