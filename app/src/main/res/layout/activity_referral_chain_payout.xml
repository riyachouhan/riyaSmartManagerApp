<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/side_nav_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:id="@+id/sch_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Referral Chain Payout"
            style="@style/homeheader"
            android:textColor="@color/white"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/btnReferralChain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/pooling_tab_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="Referral Chain"
            android:textAllCaps="true"
            android:textColor="@color/white"
            style="@style/MyCustomTabText"
            />

        <TextView
            android:id="@+id/btnReferralPayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/pooling_tab_bg_white"
            android:gravity="center"
            android:padding="10dp"
            android:text="Referral Rewards"
            android:textAllCaps="true"
            android:textColor="@color/darkShadow"
            style="@style/MyCustomTabText"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>