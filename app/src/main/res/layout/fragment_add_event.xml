<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/margin_large">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/margin"
            android:src="@drawable/default_photo" />

        <TextView
            android:id="@+id/upload_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:text="Add Image"
            android:textStyle="italic"
            android:textColor="@color/colorSecondaryText" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/padding_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!--<TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:text="Event Name: "
                        android:textColor="@color/shadow" />
-->
                    <EditText
                        android:id="@+id/event_name_ET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/edit_back"
                        android:hint="Event Name"
                        android:inputType="textPersonName"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textStyle="italic"
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/colorSecondaryText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- <TextView
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:layout_weight=".2"
                         android:text="Address: "
                         android:textColor="@color/shadow" />
 -->
                    <EditText
                        android:id="@+id/event_address_ET"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/edit_back"
                        android:hint="Address"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                        android:textStyle="italic"
                        android:inputType="textPersonName"
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/colorSecondaryText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!--<TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:text="Start Date: "
                        android:textColor="@color/shadow" />
-->
                    <TextView
                        android:id="@+id/start_date_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/edit_back"
                        android:hint="Start Date"
                        android:textStyle="italic"
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/colorSecondaryText" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!--    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".2"
                            android:text="Start Time: "
                            android:textColor="@color/shadow" />
    -->
                    <TextView
                        android:id="@+id/start_time_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/edit_back"
                        android:hint="Start Time"
                        android:textStyle="italic"
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/colorSecondaryText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <!--

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight=".2"
                                            android:text="End Date: "
                                            android:textColor="@color/shadow" />
                    -->

                    <TextView
                        android:id="@+id/end_date_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/edit_back"
                        android:hint="End Date"
                        android:textStyle="italic"
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/colorSecondaryText" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <!--
                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight=".2"
                                            android:text="End Time: "
                                            android:textColor="@color/shadow" />-->

                    <TextView
                        android:id="@+id/end_time_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/edit_back"
                        android:hint="End Time"
                        android:textStyle="italic"
                        android:padding="@dimen/padding_small"
                        android:textColor="@color/colorSecondaryText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/event_status_TV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:background="@drawable/edit_back"
                        android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                        android:hint="Event Status"
                        android:textStyle="italic"
                        android:padding="@dimen/padding_small"
                        android:text="Current"
                        android:textColor="@color/colorSecondaryText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2"
                        android:text="Event Type: "
                        android:textStyle="italic"

                        android:textColor="@color/colorSecondaryText" />

                    <RadioGroup
                        android:id="@+id/event_type_RG"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/public_RB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:textStyle="italic"
                            android:text="Public" />

                        <RadioButton
                            android:id="@+id/private_RB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:textStyle="italic"
                            android:text="Private" />

                    </RadioGroup>
                </LinearLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/submit_BT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="48dp"
                    android:background="@drawable/button_accent_round"
                    android:text="Submit"
                    android:textColor="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>