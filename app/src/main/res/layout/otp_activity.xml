<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_16sdp"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/logo1"
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo_white"
            android:tint="#820C83" />

        <TextView
            android:id="@+id/full_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_16sdp"
            style="@style/subsmallSize"
            android:text="OTP has been sent successfully to your Email/Phone. Please verify your account by entering it below."
            android:textColor="@color/colorBlackText"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rel1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp">

                    <EditText
                        android:id="@+id/otp_edt11"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_back"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/colorBlackText"
                        android:textColorHint="@color/colorAccent"
                        style="@style/EditTextSize"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="40dp">

                    <EditText
                        android:id="@+id/otp_edt12"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_back"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="15dp"
                        style="@style/EditTextSize"
                        android:singleLine="true"
                        android:textColor="@color/colorBlackText"
                        android:textColorHint="@color/colorAccent"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="40dp">

                    <EditText
                        android:id="@+id/otp_edt13"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_back"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="15dp"
                        style="@style/EditTextSize"
                        android:singleLine="true"
                        android:textColor="@color/colorBlackText"
                        android:textColorHint="@color/colorAccent"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:layout_marginTop="40dp">

                    <EditText
                        android:id="@+id/otp_edt14"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_back"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:hint="-"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="15dp"
                        android:singleLine="true"
                        android:textColor="@color/colorBlackText"
                        android:textColorHint="@color/colorAccent"
                        style="@style/EditTextSize" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/edit_back"
                android:elevation="4dp"
                android:gravity="center"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:singleLine="true"
                android:textColor="@color/colorBlackText"
                android:textColorHint="@color/tab_unSelect"
                style="@style/EditTextSize"
                android:visibility="gone" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:text=""
                android:textColor="@color/colorBlackText"
                style="@style/subhintdataSize"/>

            <TextView
                android:id="@+id/resend_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Resend OTP"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent"
                style="@style/subhintdataSize"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/sign_in"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_accent_round"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Next"
            style="@style/submitButtontextSize"
            android:textColor="#ffffff"
            />

    </LinearLayout>
</LinearLayout>

